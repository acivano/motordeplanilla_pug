html
    head
        meta(charset='utf-8')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
        title='Formularios de Ingreso'
    body
        div(class='container')
            h2='Nuevo producto - pug'
            form(action='/api/productos' method='POST')
                input(type='text' name='Titulo' class='form-control mb-2' placeholder='Titulo')
                input(type='number' name='Precio' class='form-control mb-2'  placeholder='Precio')
                input(type='text' name='url' class='form-control mb-2'  placeholder='url')
                button(class='btn btn-primary btn-lg active mt-3') Enviar
                div(class='mt-3 float-right')
                    a(href='/api/productos' class='btn btn-primary btn-lg active' role='button' aria-pressed='true') Ver productos
